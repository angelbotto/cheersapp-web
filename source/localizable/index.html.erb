---
title: Cheers
---
<section id="intro">
  <div class="container">
    <div class="message">
      <h1 class="title"><%= t('sections.message.title') %></h1>
      <h3 class="subtitle"><%= t('sections.message.subtitle') %></h3>
    </div>
    <img src="/images/shake-left.png" class="animated left hand" alt="shake image"/><img src="/images/shake-right.png" class="animated right hand"  alt="shake image"/>
    <div class="download">
      <a href="https://30k.co/cheersandroid" class="dandroid">
        <img alt="Get it on Google Play"
             src="https://developer.android.com/images/brand/en_generic_rgb_wo_60.png" />
      </a>
      <a href="#" class="dios">
        <img alt="Download on the App Store"
             src="/images/soon.png" />
      </a>
    </div>
  </div>
</section>

<section id="about">
  <div class="container">
    <div class="about-content">
      <h3 class="title"><%= t('sections.about.title') %></h3>
      <p class="content"><%= t('sections.about.content') %></p>

      <h3 class="title"><%= t('sections.phylosophy.title') %></h3>
      <p class="content"><%= t('sections.phylosophy.content') %></p>
    </div>
  </div>
</section>

<section id="how">
  <div>
    <div class="container join">
      <div class="image">
        <img src="/images/welcome.png" alt="<%= t('sections.how.join.title') %>"/>
      </div>
      <div class="text">
        <h4 class="title"><%= t('sections.how.join.title') %></h4>
        <p class="content"><%= t('sections.how.join.content') %></p>
      </div>
    </div>

    <div class="container networks">
      <div class="text">
        <h4 class="title"><%= t('sections.how.networks.title') %></h4>
        <p class="content"><%= t('sections.how.networks.content') %></p>
      </div>
      <div class="image">
        <img src="/images/add.png" alt="<%= t('sections.how.networks.title') %>"/>
      </div>
    </div>
    <div class="container connect">
      <div class="image">
        <img src="/images/done.png" alt="<%= t('sections.how.connect.title') %>"/>
      </div>
      <div class="text">
        <h4 class="title"><%= t('sections.how.connect.title') %></h4>
        <p class="content"><%= t('sections.how.connect.content') %></p>
      </div>
    </div>
    <div class="container"></div>
  </div>
</section>

<section id="invite">
  <div class="container">
    <h4><%= t('sections.invite.title') %></h4>
    <div class="input-group">
      <input type="email" class="email" placeholder="<%= t('sections.invite.form.input') %>"/><input type="submit" value="<%= t('sections.invite.form.button') %>" class="button" disabled />
    </div>
    <div class="notification">
      <p class="message"></p>
    </div>
    <div class="welcome animated">
      <h4><%= t('sections.invite.thanks') %></h4>
    </div>

    <div class="social">
      <div class="facebook">
        <div class="fb-share-button" data-layout="button"></div>
      </div>

      <div class="twitter">
        <a href="https://twitter.com/share" class="twitter-share-button" data-via="saycheersapp" data-count="none">Tweet</a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
      </div>

      <div class="google">
        <div class="g-plusone" data-size="medium" data-annotation="none"></div>
      </div>
    </div>

    <br/>
    <br/>
    <div class="download">
      <a href="https://30k.co/1x" class="dandroid">
        <img alt="Get it on Google Play"
             src="https://developer.android.com/images/brand/en_generic_rgb_wo_60.png" />
      </a>
      <a href="#" class="dios">
        <img alt="Download on the App Store"
             src="/images/soon.png" />
      </a>
    </div>
  </div>
</section>